#!/bin/bash

set -o errexit -o xtrace

#project=${1}
PROJECT=twig-execution-env-metal

zip deploy/templates.zip env.yaml templates/*

aws s3 cp deploy/templates.zip "s3://${PROJECT}" --acl public-read
aws s3 cp env.yaml "s3://${PROJECT}" --acl public-read
aws s3 cp --recursive templates/ "s3://${PROJECT}/templates" --acl public-read

echo "Use https://s3.amazonaws.com/${PROJECT}/env.yaml in CloudFormation console or API calls"